{
    "name": "qubus/inheritance",
    "description": "A library of traits that can be used in place of helper classes or god classes.",
    "type": "library",
    "keywords": ["traits", "multiple inheritance", "inheritance"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev"
        }
    ],
    "support": {
        "issues": "https://github.com/QubusPHP/inheritance/issues"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "qubus/qubus-coding-standard": "^1.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Inheritance\\": ""
        },
        "files": [
            "Helpers/core.php"
        ]
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
